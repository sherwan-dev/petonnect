{% extends 'base.html.twig' %}
{% block title %}My Pets
{% endblock %}
{% block body %}
	<div class="w-full max-w-150 bg-background-light dark:bg-background-dark min-h-screen flex items-start justify-center p-6  mx-auto">
		<div
			class="bg-white dark:bg-[#1a2e2a] shadow-xl rounded-xl overflow-hidden border border-gray-100 dark:border-gray-800">
			<!-- Header Section -->
			<div class="p-8 pb-4 border-b border-gray-50 dark:border-gray-800">
				<div class="flex items-center gap-3 mb-2">
					<div class="bg-(--green-300)/10 p-2 rounded-lg">
						<span class="text-(--green-300) text-3xl rotate-270 block">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-paw-print-icon lucide-paw-print"><circle cx="11" cy="4" r="2"/><circle cx="18" cy="8" r="2"/><circle cx="20" cy="16" r="2"/><path d="M9 10a5 5 0 0 1 5 5v3.5a3.5 3.5 0 0 1-6.84 1.045Q6.52 17.48 4.46 16.84A3.5 3.5 0 0 1 5.5 10Z"/></svg>
						</span>
					</div>
					<h1 class="text-3xl font-extrabold text-[#0e1b18] dark:text-white tracking-tight">
						Add New Pet
					</h1>
				</div>
				<p class="text-gray-500 dark:text-gray-400 text-sm">
					Please fill out the information below to add a new pet.
				</p>
			</div>
			<!-- Form Body -->
			<div class="p-8">
				<form
					class="space-y-6">
					<!-- Pet Name -->
					<div class="flex flex-col gap-2">
						<label class="text-sm font-semibold text-gray-700 dark:text-gray-200 flex items-center gap-1" for="pet-name">
							Pet Name
							<span class="text-(--green-300)">*</span>
						</label>
						<div class="relative">
							<span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 text-xl">
								<i class="fa-solid fa-file-signature"></i>
							</span>
							<input required class="w-full pl-12 pr-4 py-3.5 bg-gray-50 dark:bg-[#11211e] border border-gray-200 dark:border-gray-700 rounded-lg text-gray-900 dark:text-white focus:ring-2 focus:ring-(--green-300)/20 focus:border-(--green-300) transition-all outline-none placeholder:text-gray-400" id="pet-name" placeholder="e.g. Bella" type="text"/>
						</div>
					</div>
					<!-- Gender -->
					<div class="flex flex-col gap-2">
						<span class="text-slate-700 dark:text-slate-300 text-sm font-semibold">Gender</span>
						<div class="flex gap-2">
							{% for choice in form.gender %}
								<label class="flex-1  min-w-0 cursor-pointer">
									{{ form_widget(choice, { attr: { class: 'peer hidden' } }) }}
									<div class="flex items-center justify-center gap-2 py-3 px-4 bg-slate-50 border border-slate-200 rounded-lg text-slate-500 peer-checked:bg-(--green-300)/10 peer-checked:border-(--green-300) peer-checked:text-(--green-300) transition-all">
										{% if choice.vars.value == 'male' %}
											<i class="fa-solid fa-mars"></i>
										{% elseif choice.vars.value == 'female' %}
											<i class="fa-solid fa-venus"></i>
										{% else %}
											<i class="fa-solid fa-question"></i>
										{% endif %}
										<span class="text-sm font-bold">
											{{ choice.vars.label }}
										</span>
									</div>
								</label>
							{% endfor %}
						</div>
					</div>
					<!-- Type -->
					<div class="flex flex-col gap-2">
						<label class="text-sm font-semibold text-gray-700 dark:text-gray-200" for="type">Type</label>
						<div class="relative">
							<span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 text-xl pointer-events-none">
								<i class="fa-solid fa-layer-group"></i>
							</span>
							{{ form_widget(form.type) }}
						</div>
					</div>
					<!-- Subtype (Breed) -->
					{# <div class="flex flex-col gap-2">
						<label class="text-sm font-semibold text-gray-700 dark:text-gray-200" for="subtype">Breed</label>
						<div class="relative">
							<span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 text-xl">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trending-up-down-icon lucide-trending-up-down"><path d="M14.828 14.828 21 21"/><path d="M21 16v5h-5"/><path d="m21 3-9 9-4-4-6 6"/><path d="M21 8V3h-5"/></svg>
							</span>
							<select class="form-select-custom w-full pl-12 pr-10 py-3.5 bg-gray-50 dark:bg-[#11211e] border border-gray-200 dark:border-gray-700 rounded-lg text-gray-900 dark:text-white focus:ring-2 focus:ring-(--green-300)/20 focus:border-(--green-300) transition-all outline-none appearance-none" id="subtype">
								<option disabled="" selected="" value="">
									Select subtype (e.g. Golden Retriever)
								</option>
								<option value="mixed">Mixed Breed</option>
								<option value="purebred">Purebred</option>
								<option value="unknown">Unknown</option>
							</select>
						</div>
					</div> #}
					<!-- Additional Details / Photo Placeholder -->
					{# <div class="pt-4 border-t border-gray-100 dark:border-gray-800">
											<div class="bg-(--green-600)/5 dark:bg-(--green-300)/10 rounded-xl p-4 flex items-center gap-4">
												<div class="h-16 w-16 bg-white dark:bg-[#1a2e2a] border-2 border-dashed border-(--green-300)/30 rounded-lg flex items-center justify-center overflow-hidden">
													<span class="text-(--green-300)/40"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-image-up-icon lucide-image-up"><path d="M10.3 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10l-3.1-3.1a2 2 0 0 0-2.814.014L6 21"/><path d="m14 19.5 3-3 3 3"/><path d="M17 22v-5.5"/><circle cx="9" cy="9" r="2"/></svg></span>
												</div>
												<div>
													<h4 class="text-sm font-bold text-[#0e1b18] dark:text-white">
														Profile Picture
													</h4>
													<p class="text-xs text-gray-500 dark:text-gray-400">
														Upload a clear photo of your pet.
													</p>
												</div>
												<button class="ml-auto text-xs font-bold text-(--green-300) hover:text-secondary transition-colors" type="button">
													UPLOAD
												</button>
											</div>
										</div> #}
					<!-- Save Button -->
						<div class="pt-6"> <button class="w-full bg-(--green-500) hover:bg-secondary text-white font-bold py-4 rounded-lg shadow-lg shadow-(--green-300)/20 transition-all active:scale-[0.98] flex items-center justify-center gap-2" type="submit">
							<span class="text-xl">
								<i class="fa-solid fa-floppy-disk"></i>
							</span>
							Save Pet Profile
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}

{% block pet_block %}
	<div class="relative w-full max-w-[320px] bg-white dark:bg-zinc-900 rounded-lg shadow-xl overflow-hidden border border-gray-100 dark:border-zinc-800">
		<div class="h-40 bg-[#2e2b26] dark:opacity-80"></div>
		<div class="bg-white dark:bg-zinc-900 px-6 pt-20 pb-10 flex flex-col items-center">
			<div class="absolute top-40 left-1/2 -translate-x-1/2 -translate-y-1/2">
				<div class="relative w-36 h-36 rounded-full bg-white dark:bg-zinc-900 p-1.5 shadow-sm">
					<div class="w-full h-full rounded-full bg-red flex items-center justify-center overflow-hidden">
						{% if pet.profilePictureFileName %}
							<img src="{{ asset('uploads/pets/' ~ pet.profilePictureFileName) }}" alt="{{ pet.name }}" class="h-full w-full object-cover">
						{% else %}
							<img src="{{ asset('assets/images/default-pet.png') }}" alt="Pet Image" class="h-full w-full object-cover opacity-50">
						{% endif %}
					</div>
				</div>
			</div>
			<div class="mt-4">
				<h1 class="font-display text-2xl text-gray-900 dark:text-gray-100">{{pet.name}}</h1>
			</div>
			<div class="flex items-center gap-6 mt-6">
				<button aria-label="Notifications" class="text-icon-gray dark:text-gray-400 hover:opacity-80 transition-opacity">
					<i class="fa-solid fa-bell"></i>
				</button>
				<button aria-label="Messages" class="text-icon-gray dark:text-gray-400 hover:opacity-80 transition-opacity">
					<i class="fa-solid fa-envelope"></i>
				</button>
			</div>
		</div>
	</div>
{% endblock %}
